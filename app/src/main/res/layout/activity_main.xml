<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.browseimages.MainActivity"
    >
    <LinearLayout
        android:id="@+id/mSearchLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_42dp"
        android:layout_marginBottom="@dimen/dimen_6dp"
        android:layout_marginLeft="@dimen/dimen_6dp"
        android:layout_marginRight="@dimen/dimen_6dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        android:background="@drawable/search_radius_background"
        android:elevation="@dimen/dimen_2dp"
        android:paddingLeft="@dimen/dimen_11dp">
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edit_query"
        android:imeOptions="actionSearch"
        android:hint="@string/search"
        android:inputType="text"
        android:layout_height="@dimen/dimen_42dp"
        android:alpha="0.54"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="@dimen/dimen_14dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_8dp"
        android:background="@null"
        />
    </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:layout_below="@id/mSearchLayout"
    >


</FrameLayout>
</RelativeLayout>